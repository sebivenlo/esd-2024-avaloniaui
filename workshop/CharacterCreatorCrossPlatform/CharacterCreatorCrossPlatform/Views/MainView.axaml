<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:CharacterCreatorCrossPlatform.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CharacterCreatorCrossPlatform.Views.MainView"
             x:DataType="vm:MainViewModel">
  <Design.DataContext>
    <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
    <vm:MainViewModel />
  </Design.DataContext>

  <Grid Margin="20">
        <!-- Grid is made from two rows and two columns -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Top-left: Name, Gender, Class and Victory Quote -->
        <StackPanel Grid.Row="0" Grid.Column="0" Margin="10">
            <Border Margin="5" CornerRadius="10" Background="LightBlue">
                <TextBlock Margin="5" FontSize="24" HorizontalAlignment="Center" Text="Avalonia UI workshop: Character Creator"/>
            </Border>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0">Name</Label>
                <TextBox Name="name" Grid.Row="0" Grid.Column="1" Text="" />

                <Label Grid.Row="1" Grid.Column="0">Gender</Label>
                <ComboBox Name="gen" Grid.Row="1" Grid.Column="1" MaxDropDownHeight="100" SelectedIndex="0">
                    <ComboBoxItem>Female</ComboBoxItem>
                    <ComboBoxItem>Male</ComboBoxItem>
                </ComboBox>

                <Label Grid.Row="2" Grid.Column="0">Class</Label>
                <ComboBox Name="choice_class" Grid.Row="2" Grid.Column="1" MaxDropDownHeight="100" SelectedItem="{Binding SelectedClass}" ItemsSource="{Binding ClassChoices}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ClassName}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <Label Grid.Row="3" Grid.Column="0">Victory Quote</Label>
                <TextBox Name="quote" Grid.Row="3" Text="" Grid.Column="1" Height="50" AcceptsReturn="True" TextWrapping="Wrap"/>
            </Grid>
        </StackPanel>

        <!-- Top-right: Height and Width -->
        <StackPanel Grid.Row="0" Grid.Column="1" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0">Height</Label>
                <NumericUpDown IsReadOnly="True" Value="300" Width="200" FormatString="0" Minimum="1" Name="hei" Grid.Row="0" Grid.Column="1"/>

                <Label Grid.Row="1" Grid.Column="0">Width</Label>
                <NumericUpDown IsReadOnly="True" Value="225" Width="200" FormatString="0" Minimum="1" Name="wid" Grid.Row="1" Grid.Column="1"/>
            </Grid>
        </StackPanel>

        <!-- Middle-left: Vitality, Endurance, Strength, Skill, and Arcane -->
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="300" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0">Vitality</TextBlock>
                <NumericUpDown IsReadOnly="True" Value="{Binding Vitality}" Width="300" FormatString="0" Minimum="1" Name="vit" Grid.Row="0" Grid.Column="1"/>

                <TextBlock Grid.Row="1" Grid.Column="0">Endurance</TextBlock>
                <NumericUpDown IsReadOnly="True" Value="{Binding Endurance}" Width="300" FormatString="0" Minimum="1" Name="end" Grid.Row="1" Grid.Column="1"/>

                <TextBlock Grid.Row="2" Grid.Column="0">Strength</TextBlock>
                <NumericUpDown IsReadOnly="True" Value="{Binding Strength}" Width="300" FormatString="0" Minimum="1" Name="str" Grid.Row="2" Grid.Column="1"/>

                <TextBlock Grid.Row="3" Grid.Column="0">Skill</TextBlock>
                <NumericUpDown IsReadOnly="True" Value="{Binding Skill}" Width="300" FormatString="0" Minimum="1" Name="ski" Grid.Row="3" Grid.Column="1"/>

                <TextBlock Grid.Row="4" Grid.Column="0">Arcane</TextBlock>
                <NumericUpDown IsReadOnly="True" Value="{Binding Arcane}" Width="300" FormatString="0" Minimum="1" Name="arc" Grid.Row="4" Grid.Column="1"/>
            </Grid>
        </StackPanel>

        <!-- Middle-right: Canvas -->
        <Canvas x:Name="CharacterCanvas" Width="300" Height="270" Grid.Row="1" Grid.Column="1" Margin="10">
            <Grid Width="{Binding Width, ElementName=CharacterCanvas}" Height="{Binding Height, ElementName=CharacterCanvas}">
                <Viewbox Stretch="Fill" Width="225" Height="300">
                    <Grid>
                        <!-- Head -->
                        <Ellipse Fill="Green" Width="58" Height="58" Margin="0,0,0,142"/>
                        <!-- Torso -->
                        <Rectangle Fill="Blue" Width="75" Height="80" Margin="0,58,0,62"/>
                        <!-- Right arm -->
                        <Rectangle Fill="Cyan" Width="60" Height="20" Margin="135,0,0,64"/>
                        <!-- Right left -->
                        <Rectangle Fill="Cyan" Width="60" Height="20" Margin="0,0,135,64"/>
                        <!-- Right leg -->
                        <Rectangle Fill="Red" Width="20" Height="60" Margin="0,138,55,2"/>
                        <!-- Left leg-->
                        <Rectangle Fill="Red" Width="20" Height="60" Margin="55,138,0,2"/>
                    </Grid>
                </Viewbox>
            </Grid>
        </Canvas>


        <!-- Bottom-left: Colors for body parts -->
        <StackPanel Grid.Row="2" Grid.Column="0" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Implement challenge 3 here -->

            </Grid>
        </StackPanel>

        <!-- Bottom-right: Name and Victory Quote -->
        <StackPanel Grid.Row="2" Grid.Column="1" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

            <!-- Implement challenge 1 here -->

            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
